doctype html
html(lang="es")
   head
      meta(charset="UTF-8")
      meta(name="viewport", content="width=device-width, initial-scale=1.0")
      link(rel='icon' type='image/png' href='/static/img/favicon.png')
      //script(src="/static/js/jquery.min.js")
      script(src="https://code.jquery.com/jquery-2.2.4.min.js"
			  integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44="
			  crossorigin="anonymous")
      link(rel="stylesheet", href="/static/css/main.css")
      link(rel="stylesheet", href='/static/css/bootstrap.min.css')
      link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css")
      script(src="/static/js/bootstrap.min.js")
      title CrossMe
   body
      .row
         .col-sm-12
            nav.navbar.navbar-expand-lg.navbar-light.bg-light
               #logo
                  a.navbar-brand(href="/")
                     img(src="static/img/logo-letra_negro.png", width="120" alt="logo-solo-letras")
                  button.navbar-toggler(type='button' data-toggle='collapse' data-target="#navbarContent")
                     span.navbar-toggler-icon
               #navbarContent.collapse.navbar-collapse
                  ul.navbar-nav.mr-auto
                     li.nav-item.active
                     a.nav-link(href='/')
                        | Inicio 
                        span.sr-only (current)
                     li.nav-item
                        a.nav-link(href='#') Sobre nosotros
                     li.nav-item
                        a.nav-link(href='#') Contacto
                  #login
                     ul.nav.navbar-nav.navbar-right
                        li.icons-login
                           a(href="#")
                              i.fas.fa-user 
                              span(data-toggle='modal' data-target='#signupModal') Sign Up
                           a(href='#')
                              i.fas.fa-sign-in-alt  
                              span(data-toggle='modal' data-target='#loginModal') Login
      .container
         // Modal de registro
         #signupModal.modal.fade(tabindex='-1' role='dialog' aria-labelledby='exampleModalCenterTitle' aria-hidden='true')
            .modal-dialog(role='document')
               .modal-content
                  .modal-header.text-center
                     h4.modal-title.w-100.font-weight-bold Sign up
                     button.close(type='button' data-dismiss='modal' aria-label='Close')
                        span(aria-hidden='true') &times;
                  .modal-body.mx-3
                     .md-form.mb-1
                        p
                           i.fas.fa-user.prefix.grey-text
                           |  Nombre de usuario 
                           input#orangeForm-name.form-control.validate(type='text')
                     .md-form.mb-1
                        p
                           i.fas.fa-envelope.prefix.grey-text
                           |  Email
                           input#orangeForm-email.form-control.validate(type='email')
                     .md-form.mb-1
                        p
                           i.fas.fa-lock.prefix.grey-text
                           |  Contrase&ntilde;a
                           input#orangeForm-pass.form-control.validate(type='password')
                  .modal-footer.d-flex.justify-content-center
                     button.btn.btn-deep-orange Sign up
         // Modal de inicio de sesion
         #loginModal.modal.fade(tabindex='-1' role='dialog' aria-labelledby='exampleModalCenterTitle' aria-hidden='true')
            .modal-dialog(role='document')
               .modal-content
                  .modal-header.text-center
                     h4.modal-title.w-100.font-weight-bold Log in
                     button.close(type='button' data-dismiss='modal' aria-label='Close')
                        span(aria-hidden='true') &times;
                  .modal-body.mx-3
                     .md-form.mb-1
                        p
                           i.fas.fa-user.prefix.grey-text
                           |  Nombre de usuario 
                           input#orangeForm-name.form-control.validate(type='text')
                     .md-form.mb-1
                        p
                           i.fas.fa-lock.prefix.grey-text
                           |  Contrase√±a
                           input#orangeForm-pass.form-control.validate(type='password')
                  .modal-footer.d-flex.justify-content-center
                     button.btn.btn-ligth Log in
         .main
            h1 CrossMe
            p La mejor red social de crossfit      
