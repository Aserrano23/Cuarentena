.row
    .col-sm-12
        nav.navbar.navbar-expand-lg.navbar-light.bg-light
            #logo
                a.navbar-brand(href="/")
                    img(src="static/img/logo-letra_negro.png", width="120" alt="logo-solo-letras")
                button.navbar-toggler(type='button' data-toggle='collapse' data-target="#navbarContent")
                    span.navbar-toggler-icon
            #navbarContent.collapse.navbar-collapse
                ul.navbar-nav.mr-auto
                    if page == 'home'
                        li.nav-item.active
                            a.nav-link(href='/')
                                | Inicio
                    else
                        li.nav-item
                            a.nav-link(href='/')
                                | Inicio
                    if page == 'sobreNosotros'
                        li.nav-item.active
                            a.nav-link(href='/sobreNosotros')
                                | Sobre nosotros
                    else 
                        li.nav-item
                            a.nav-link(href='/sobreNosotros')
                                | Sobre nosotros
                    if page == 'contacto'
                        li.nav-item.active
                            a.nav-link(href='/contacto')
                                | Contacto
                    else
                        li.nav-item
                            a.nav-link(href='/contacto')
                                | Contacto
                #login
                    ul.nav.navbar-nav.navbar-right
                        li.icons-login
                            a(href="#")
                                i.fas.fa-user 
                                span(data-toggle='modal' data-target='#signupModal') Sign Up
                            a(href='#')
                                i.fas.fa-sign-in-alt  
                                span(data-toggle='modal' data-target='#loginModal') Login